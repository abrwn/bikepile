<% include ../partials/header %>
            <div class='container'>
                <div class='mw-500 mx-auto'>
                    <h1 style='text-align: center;'>Add a comment for <%= bike.name %></h1>
                    <form method='POST' action='/bikes/<%= bike._id %>/comments'>
                        <div class='form-group'>
                            <textarea class='form-control' placeholder='Enter a comment' required autofocus name='comment[text]'></textarea>
                        </div>
                        <div class='form-group'>
                            <input class='btn btn-lg btn-default btn-block btn-primary' type='submit'></input>
                        </div>
                    </form>
                    <a href='/bikes/<%= bike._id %>' class='btn btn-lg btn-outline-danger btn-block'>Cancel</a>
                </div>
            </div>
<% include ../partials/footer %>