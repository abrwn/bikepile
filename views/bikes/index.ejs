<% include ../partials/header %>
            <div class='container-fluid'>
                <div class='row'>
                    <% bikes.reverse().forEach(function(bike){ %>
                    <div class='col-12 col-sm-6 col-md-4 col-lg-3 my-2'>
                        <div class='card p-2'>
                            <img class='card-img-top' src='<%= bike.image %>'>
                            <div>
                                <h5 class='card-title'><%= bike.name %></h5>
                                <a href='/bikes/<%= bike._id %>' class='btn btn-outline-primary btn-sm'>Details</a>
                            </div>
                        </div> 
                    </div>
                    <% }); %>
                </div>
            </div> 
<% include ../partials/footer %>